<div class="container position-relative">
    <div class="shadow-lg container-body position-absolute top-0 start-50 translate-middle-x">
        <div class="nav title shadow rounded justify-content-center">CHAT WITH STRANGERS -&nbsp;<span id="online-users" class="text-warning"></span></div>
            <div class="chat px-2">

                <div class="information p-2"></div>

                <div id="searching" class="d-flex justify-content-center position-absolute top-50 start-50 translate-middle">
                  <div id="loading" class="spinner-border text-dark" style="width: 4rem; height: 4rem;" role="status">
                  </div>
                </div>
                
                <div id="new-chat" class="invisible d-flex justify-content-center position-absolute top-50 start-50 translate-middle">
                  <button class="btn btn-info fs-2 " onclick="newChat()">Start chat!</button>
                </div>


                <div class="messages"></div>

                <div class="scrollTarget"></div>

            </div> 

            <div class="controls">
                <div class="position-relative">
                    <div class="row inputs" class="position-absolute top-0 start-0">

                        <div class="text col-auto">
                            <input onKeyPress="inputEnter(event)" autocomplete="off" class="form-control" type="text" id="msg" readonly placeholder="Start a chat...">
                        </div>

                        <div class="btns col-auto">
                            <button id="send" onclick="send()" class="col-auto btn btn-outline-primary disabled" type="submit"><i data-feather="send"></i></button> 
                            
                            <div id="refresh" class="btn-group dropup invisible">

                                <button onclick="startNewChat()" class="btn btn-info dropdown-toggle-split" aria-expanded="false"><i data-feather="refresh-cw"></i></button>

                                <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><button onclick="stopChat()" class="dropdown-item" type="button"><i data-feather="alert-circle"></i> Stop chat!</button></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    
                </div>
                
            </div>

    </div>
</div>

<script>
    feather.replace();
</script>
